---
export interface Props {
    title: string;
}
const { title } = Astro.props;
import i18next, { t } from "i18next";
import { HeadHrefLangs, Trans } from "astro-i18next/components";
import { LanguageSelector } from "astro-i18next/components";
import { localizePath } from "astro-i18next";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content={t("meta-description")}
        />
        <link rel="canonical" href="https://teamholmgren.com" />
        <link rel="shortcut icon" href="/img/logo-tiny.svg" type="image/svg" />
        <script
            defer
            data-domain="teamholmgren.com"
            src="https://stats.jontes.page/js/script.js"
        ></script>
        <title>{title}</title>
        <HeadHrefLangs />
    </head>
    <body class="bg-green-900">
        <div class="flex flex-col min-h-screen">
            <!-- Navbar -->
            <nav
                class="flex items-center justify-between flex-wrap bg-neutral-800 p-3"
            >
                <div class="flex items-center flex-shrink-0 text-white mr-6">
                    <a
                        href={localizePath("/", i18next.language)}
                        class="font-semibold text-xl tracking-tight"
                    >
                        <img
                            class="h-10 block tiny:hidden"
                            alt="small logo of TEAM Holmgren"
                            src="/img/logo-tiny.svg"
                        />
                        <img
                            class="h-10 hidden tiny:block"
                            alt="logo of TEAM Holmgren"
                            src="/img/logo.svg"
                        />
                    </a>
                </div>

                <LanguageSelector
                    showFlag={true}
                    class="p-2 bg-stone-600 text-white rounded"
                />
                <div
                    class="w-full block flex-grow lg:flex lg:items-center lg:w-auto"
                >
                    <div class="text-sm lg:flex-grow"></div>
                    <div>
                        <a
                            href={localizePath("/", i18next.language)}
                            class="inline-block text-sm px-4 py-2 text-white border-white mt-4 lg:mt-0"
                            >{t("home")}</a
                        >
                        <a
                            href={localizePath("/info", i18next.language)}
                            class="inline-block text-sm px-4 py-2 text-white border-white mt-4 lg:mt-0"
                            >{t("information")}</a
                        >
                        <a
                            href={localizePath("/offer", i18next.language)}
                            class="inline-block text-sm px-4 py-2 text-white border-white mt-4 lg:mt-0"
                            >{t("offer")}</a
                        >
                        <a
                            href={localizePath("/contact", i18next.language)}
                            class="inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:bg-green-600 mt-4 lg:mt-0"
                            >{t("contactUs")}</a
                        >
                    </div>
                </div>
            </nav>
            <slot />
            <footer
                class="p-4 bg-neutral-800 rounded-t-lg shadow md:flex md:items-center md:justify-between md:p-6"
            >
                <span class="text-sm sm:text-center text-gray-400"
                    >Â© 2022 TEAM Holmgren Consulting AB. All Rights Reserved.
                    Developed by <a
                        class="hover:underline"
                        rel="nofollow"
                        href="https://jontes.page">Jonte</a
                    >.
                </span>
                <ul
                    class="flex flex-wrap items-center mt-3 text-s text-gray-400 sm:mt-0"
                >
                </ul>
            </footer>
        </div>
    </body>
</html>
